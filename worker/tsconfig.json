{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "src/shared/*",
      ],
    },
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
    ],
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}